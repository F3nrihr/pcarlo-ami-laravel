FROM amazonlinux:1

MAINTAINER Pablo Carballo

# Instalando apache, php y librerias necesarias
RUN yum update -y && \
    yum upgrade -y

RUN yum install -y \
    sudo \
    httpd24 \
    mod24_ssl \
    gcc \
    memcached \
    openssl-devel \
    php71 \
    php71-bcmath \
    php71-cli \
    php71-common \
    php71-dba \
    php71-dbg \
    php71-devel \
    php71-enchant \
    php71-fpm \
    php71-gd \
    php71-gmp \
    php71-imap \
    php71-intl \
    php71-json \
    php71-ldap \
    php71-mbstring \
    php71-mcrypt \
    php71-mysqlnd \
    php71-odbc \
    php71-opcache \
    php71-pdo \
    php71-pdo-dblib \
    php71-pecl-igbinary \
    php71-pecl-memcached \
    php71-pecl-oauth \
    php71-pecl-ssh2 \
    php71-pecl-uuid \
    php71-pecl-yaml \
    php71-pgsql \
    php71-process \
    php71-pspell \
    php71-recode \
    php71-snmp \
    php71-soap \
    php71-tidy \
    php71-xml \
    php71-xmlrpc \
    php71-zip \
    man \
    && yum clean all

# Intalando mas utils
RUN yum install -y curl  \
    vim \
    nano

# Linkamos el public a /var/www/html
ENV APP_HOME /var/www/html
RUN mkdir -p /web/deploy/public && \
    ln -s /web/deploy/public $APP_HOME 

# Intalamos laravel
RUN curl -sS https://getcomposer.org/installer | php -- --install-dir=/usr/local/bin --filename=composer && \
    ln -s /usr/local/bin/composer /usr/bin/composer && \
    composer global require "laravel/installer" && \
    sed -i 's/short_open_tag = Off/short_open_tag = On/g' /etc/php-7.1.ini && \
    sed -i 's/short_open_tag = Off/short_open_tag = On/g' /etc/php.ini

# Actualizamos default apache con lo creado
ADD ami-httpd.conf /etc/httpd/conf/httpd.conf

# Exponiendo puertos apache
EXPOSE 80

# Updateamos composer, generamos key para larval y damos permisos a las carpetas cache de escritura (todo después de q se levante el contenedor, sino pitaría al no existir las carpetas)
ONBUILD RUN cd /web/deploy/ && \
            composer update && \
            # php artisan key:generate && \
            chmod -R 777 /web/deploy/storage /web/deploy/bootstrap

# Reiniciamos apache2
CMD ["/usr/sbin/httpd","-D","FOREGROUND"]

